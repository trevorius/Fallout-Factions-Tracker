FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY jest.config.ts ./
COPY jest.setup.ts ./

# Install dependencies
RUN npm ci

# Copy source code
COPY src ./src
COPY prisma ./prisma
COPY public ./public

# Generate Prisma client
RUN npx prisma generate

# Set environment variables for testing
ENV NODE_ENV=test
ENV DATABASE_URL="postgresql://test:test@localhost:5432/test_db"

# Run tests
CMD ["npm", "test"]